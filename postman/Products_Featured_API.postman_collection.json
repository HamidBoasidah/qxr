	"item": [
		{
			"name": "Recent Products - وصل حديثاً",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// التحقق من نجاح الطلب",
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"var jsonData = pm.response.json();",
							"",
							"// التحقق من البنية الأساسية",
							"pm.test('Response has success field', function () {",
							"    pm.expect(jsonData).to.have.property('success');",
							"    pm.expect(jsonData.success).to.be.true;",
							"});",
							"",
							"pm.test('Response has data field', function () {",
							"    pm.expect(jsonData).to.have.property('data');",
							"});",
							"",
							"pm.test('Response has message', function () {",
							"    pm.expect(jsonData).to.have.property('message');",
							"});",
							"",
							"// التحقق من بنية pagination",
							"pm.test('Data has pagination structure', function () {",
							"    pm.expect(jsonData.data).to.have.property('data');",
							"    pm.expect(jsonData.data).to.have.property('current_page');",
							"    pm.expect(jsonData.data).to.have.property('per_page');",
							"    pm.expect(jsonData.data).to.have.property('total');",
							"});",
							"",
							"// التحقق من بيانات المنتج",
							"if (jsonData.data.data.length > 0) {",
							"    var product = jsonData.data.data[0];",
							"    ",
							"    pm.test('Product has required fields', function () {",
							"        pm.expect(product).to.have.property('id');",
							"        pm.expect(product).to.have.property('name');",
							"        pm.expect(product).to.have.property('price');",
							"        pm.expect(product).to.have.property('main_image');",
							"        pm.expect(product).to.have.property('is_active');",
							"    });",
							"    ",
							"    pm.test('Product is active', function () {",
							"        pm.expect(product.is_active).to.be.true;",
							"    });",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/products/recent?per_page=10",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"products",
						"recent"
					],
					"query": [
						{
							"key": "per_page",
